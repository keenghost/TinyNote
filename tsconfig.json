{
  "compilerOptions": {
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",

    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,

    "noEmit": true,
    "incremental": true,
    "declaration": false
  },
  "include": ["scripts", "packages/*/scripts"]
}
