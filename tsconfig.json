{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ES2020"],

    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,

    "noEmit": true,
    "incremental": true,
    "declaration": false
  },
  "include": ["scripts/**/*", "packages/*/scripts/**/*"]
}
